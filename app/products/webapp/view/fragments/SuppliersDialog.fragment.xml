<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <SelectDialog
        title="{i18n>Suppliers}"
        items="{
            path: 'suppliers>/',
            sorter: { path: 'Name' }
        }"
        search="onSuppliersDialogSearch"
        confirm="onSuppliersDialogConfirm"
        cancel="onSuppliersDialogClose"
    >
        <StandardListItem
            title="{suppliers>Name}"
            description="{suppliers>Country}"
            visible="{ 
                parts: ['suppliers>Id', 'products>Suppliers', 'editableProduct>/SuppliersToAdd', 'editableProduct>/SuppliersToRemove'], 
                formatter: '.formatter.isSupplierNonexistentFormatter' 
            }"
        />
    </SelectDialog>
</core:FragmentDefinition>
