<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <ColumnListItem validateFieldGroup="onProductDataFieldGroupValidate">
        <Input
            name="Name"
            fieldGroupIds="ProductDataField,SupplierName"
            placeholder="{i18n>SupplierNamePlaceholder}"
            value="{
              path : 'editableProduct>Name',
              type : 'sap.ui.model.type.String',
              constraints : {
                  minLength: 2
              }
            }"
            required="true"
        />
        <Input
            name="Country"
            fieldGroupIds="ProductDataField,SupplierCountry"
            placeholder="{i18n>CountryPlaceholder}"
            value="{
                path : 'editableProduct>Country',
                type : 'sap.ui.model.type.String',
                constraints : {
                    minLength: 2
                }
            }"
            showSuggestion="true"
            suggestionItems="{countries>/Countries}"
            change="onSupplierCountryInputChange"
            required="true"
        >
            <core:Item
                key="{countries>iso2}"
                text="{countries>name}"
            />
        </Input>
        <Input
            name="State"
            fieldGroupIds="ProductDataField,SupplierState"
            placeholder="{i18n>StatePlaceholder}"
            value="{
                path : 'editableProduct>State',
                type : 'sap.ui.model.type.String',
                constraints : {
                    minLength: 2
                }
            }"
            showSuggestion="true"
            suggestionItems="{countries>/States}"
            change="onSupplierStateInputChange"
            required="true"
        >
            <suggestionItems>
                <core:Item
                    key="{countries>iso2}"
                    text="{countries>name}"
                />
            </suggestionItems>
        </Input>
        <Input
            name="City"
            fieldGroupIds="ProductDataField,SupplierCity"
            placeholder="{i18n>CityPlaceholder}"
            value="{
                path : 'editableProduct>City',
                type : 'sap.ui.model.type.String',
                constraints : {
                    minLength: 2
                }
            }"
            showSuggestion="true"
            suggestionItems="{countries>/Cities}"
            required="true"
        >
            <suggestionItems>
                <core:Item
                    key="{countries>id}"
                    text="{countries>name}"
                />
            </suggestionItems>
        </Input>
        <Input
            name="Street"
            fieldGroupIds="ProductDataField,SupplierStreet"
            placeholder="{i18n>StreetPlaceholder}"
            value="{
              path : 'editableProduct>Street',
              type : 'sap.ui.model.type.String',
              constraints : {
                  minLength: 3
              }
            }"
            required="true"
        />
        <Input
            name="ZipCode"
            fieldGroupIds="ProductDataField,SupplierZipCode"
            placeholder="{i18n>ZipCodePlaceholder}"
            value="{
                path : 'editableProduct>ZipCode',
                type: 'custom.type.ZipCode'
            }"
            required="true"
        />
        <HBox justifyContent="End">
            <Button
                type="Transparent"
                icon="sap-icon://duplicate"
                tooltip="{i18n>Select}"
                press="onSelectSupplierButtonPress"
            />
            <Button
                type="Transparent"
                icon="sap-icon://sys-cancel"
                tooltip="{i18n>Delete}"
                press="onDeleteNewSupplierButtonPress"
            />
        </HBox>
    </ColumnListItem>
</core:FragmentDefinition>
