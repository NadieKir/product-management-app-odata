<core:FragmentDefinition
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
>
    <ColumnListItem vAlign="Middle">
        <Text text="{Name}" />
        <Text text="{Country}" />
        <Text text="{State}" />
        <Text text="{City}" />
        <Text text="{Street}" />
        <Text text="{ZipCode}" />
        <HBox justifyContent="End">
            <Button
                type="Transparent"
                icon="sap-icon://sys-cancel"
                tooltip="{i18n>Delete}"
                press="onDeleteSupplierButtonPress"
            />
        </HBox>
    </ColumnListItem>
</core:FragmentDefinition>
